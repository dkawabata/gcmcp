{
  "name": "gcmcp",
  "version": "0.1.2",
  "description": "Interactive MCP servers switcher for Gemini CLI (~/.gemini/settings.json)",
  "author": "dkawabata",
  "keywords": [
    "gemini",
    "gemini-cli",
    "mcp",
    "mcp-servers",
    "cli",
    "toggle",
    "google-cloud",
    "codeassist"
  ],
  "bin": {
    "gcmcp": "dist/index.js"
  },
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "validate": "npm run typecheck && npm run lint && npm test",
    "prepack": "npm run build",
    "prepublishOnly": "npm run validate"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.1",
    "inquirer": "^9.3.6",
    "jsondiffpatch": "^0.6.0",
    "ora": "^8.0.1",
    "pathe": "^1.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "tsup": "^8.1.0",
    "typescript": "5.5.4",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist/index.js",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dkawabata/gcmcp.git"
  },
  "bugs": {
    "url": "https://github.com/dkawabata/gcmcp/issues"
  },
  "homepage": "https://github.com/dkawabata/gcmcp#readme",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "target": "node20",
    "sourcemap": false,
    "minify": false,
    "outDir": "dist",
    "dts": false,
    "clean": true,
    "banner": {
      "js": "#!/usr/bin/env node"
    }
  }
}
